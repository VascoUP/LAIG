<dsx>
    <scene root="a1" axis_length="2" />
    
    
    <views default="p1" >

        <perspective id="p1" near="0.4" far="500" angle="10">

            <from x="20" y="20" z="20" />
            <to x="0" y="0" z="0" />

        </perspective>

        <perspective id="p2" near="0.4" far="200" angle="40">

            <from x="10" y="10" z="10" />
            <to x="0" y="3" z="0" />

        </perspective>        

        <perspective id="d1" near="0.2" far="400" angle="30">

            <from x="-20" y="10" z="5" />
            <to x="0" y="3" z="0" />

        </perspective>

    </views>
    

    <illumination doublesided="0" local="1" >
    
        <ambient r="0.1" g="0.1" b="0.1" a="255" />
        <background r="0.2" g="0.2" b="0.8" a="1.0" />
        <ambient r="0.05" g="0.05" b="0.05" a="1.0" />
        
    </illumination>
    
    
    <lights>

        <omni id="l1" enabled="1" >

            <location x="-5" y="-5" z="-5" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.4" g="0.3" b="0.5" a="1.0" />

        </omni>

        <omni id="l3" enabled="1" >

            <location x="2" y="2" z="2" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />

        </omni>
        
        <spot id="l2" enabled="1" angle="1.47" exponent="10">

            <target x="0" y="0" z="0" />
            <location x="-2" y="2" z="2" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.7" g="0.4" b="0.2" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />

        </spot>
    </lights>
    
    
    <textures>

        <texture id="t1" file="resources/WoodTexture.jpg" length_s="1" length_t="1" />
        <texture id="g1" file="resources/FoliageTexture.jpg" length_s="1" length_t="1" />
        <texture id="t2" file="resources/RockTexture.jpg" length_s="1" length_t="1" />
        <texture id="g2" file="resources/FluorescentRedTexture.jpg" length_s="1" length_t="1" />
        
    </textures>

    
    <materials>
        <!-- Brown diffuse (wood) -->
        <material id="m1" >

            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="1" />

        </material>
        <!-- Green diffuse/specular (fooliage) -->
        <material id="m2" >

            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="3" />

        </material>
        <!-- Grey diffuse (rock) -->
        <material id="t1" >

            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="5" />

        </material>
        <!-- Fluorescent red -->
        <material id="e1" >

            <emission r="0.2" g="0" b="0" a="1" />
            <ambient r="1" g="0" b="0" a="1" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="1" g="0" b="0" a="1" />
            <shininess value="3" />

        </material>

    </materials>
    
    
    <transformations>
    
        <transformation id="t1">

           <translate x="5" y="1" z="0" />
           <rotate axis="x" angle="3.14" />
           <scale x="2" y="2" z="2" />

        </transformation>
        
    </transformations>
    
    <primitives>
    
        <primitive id="p1">

            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
            
        </primitive>

        <primitive id="p2">

            <sphere radius="1" slices="20" stacks="20" />
            
        </primitive>

        <primitive id="p3">

            <cylinder base="0.5" top="0" height="0.8" slices="10" stacks="10" />
            
        </primitive>

        <primitive id="p4">

            <cylinder base="1" top="1" height="1" slices="10" stacks="10" />
            
        </primitive>
                
        <primitive id="p5">

            <torus inner="0.05" outer="1.2" slices="20" loops="40" />
            
        </primitive>
        
    </primitives>
    
    
    <components>
        
        <!-- Root Element -->
        <component id="a1">
        
            <transformation>

                <translate x="0" y="2" z="-1" />

            </transformation>

            <materials>

                <material id="m1" />

            </materials>

            <texture id="t1" />

            <children>

                <componentref id="t1" />
                <componentref id="b11" />
                <componentref id="b12" />
                <componentref id="p11" />
                <componentref id="p12" />
                <componentref id="n1" />
                <componentref id="pe11" />
                <componentref id="pe12" />
                <componentref id="c1" />
                <componentref id="ch1" />
                <componentref id="ar1" />
                
            </children>
            
        </component>

        <!-- Torso -->
        <component id="t1">
        
            <transformation>

                <translate x="1" y="0" z="0" />

            </transformation>

            <materials>

                <material id="m2" />

            </materials>

            <texture id="g1" />

            <children>

                <componentref id="t11" />
                <componentref id="t12" />
                <componentref id="t13" />
                
            </children>
            
        </component>
        
        <!-- Front and back rectangles -->
        <component id="t11">
        
            <transformation>

                <scale x="1" y="0.5" z="1" />

            </transformation>

            <materials>

                <material id="inherit" />

            </materials>

            <texture id="inherit" />

            <children>

                <componentref id="t111" />
                <componentref id="t112" />
                
            </children>
            
        </component>

        <!-- Right side and left side rectangles -->
        <component id="t12">
        
            <transformation>

                <scale x="1" y="1" z="1" />

            </transformation>

            <materials>

                <material id="inherit" />
				<material id="e1"/>

            </materials>

            <texture id="inherit" />

            <children>

                <componentref id="t121" />
                <componentref id="t122" />
                
            </children>
            
        </component>

        <!-- Upper and lower rectangles -->
        <component id="t13">
        
            <transformation>

                <scale x="1" y="1" z="1" />

            </transformation>

            <materials>

                <material id="inherit" />

            </materials>

            <texture id="inherit" />

            <children>

                <componentref id="t131" />
                <componentref id="t132" />
                
            </children>
            
        </component>

        <!-- Front rectangle -->
        <component id="t111">
        
            <transformation>

                <translate x="0" y="0" z="0.1" />

            </transformation>

            <materials>

                <material id="inherit" />

            </materials>

            <texture id="inherit" />

            <children>

                <primitiveref id="p1" />
                
            </children>
            
        </component>

        <!-- Back rectangle -->
        <component id="t112">
        
            <transformation>

                <translate x="0" y="0" z="-0.1" />

            </transformation>

            <materials>

                <material id="inherit" />

            </materials>

            <texture id="inherit" />

            <children>

                <primitiveref id="p1" />
                
            </children>
            
        </component>

        <!-- Left side rectangle -->
        <component id="t121">
        
            <transformation>

                <translate x="0" y="-0.25" z="0" />
