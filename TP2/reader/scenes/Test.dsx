<dsx>

    <scene root="root" axis_length="2" />
        
    <views default="p1" >

        <perspective id="p1" near="0.4" far="500" angle="10">

            <from x="10" y="50" z="10" />
            <to x="0" y="0" z="0" />

        </perspective>

    </views>
    

    <illumination doublesided="0" local="1" >
    
        <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
        <background r="0" g="0" b="0" a="1.0" />
        
    </illumination>
    
    
    <lights>

        <omni id="l1" enabled="1" >
            <location x="15" y="15" z="15" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.4" g="0.3" b="0.5" a="1.0" />
        </omni>

    </lights>
        
    <textures>
        <texture id="t1" file="resources/RockTexture.jpg" length_s="1" length_t="1" />
    </textures>
    
    <materials>

        <!-- Brown diffuse -->
        <material id="w1" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.50" a="1" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1" />
            <specular r="0.18" g="0.13" b="0.50" a="1" />
            <shininess value="1" />
        </material>

    </materials>
    
    <transformations>

    </transformations>
    
    <!-- novo bloco de animacao -->
    <animations>

    </animations>

    <primitives>
		
		<primitive id="chess1">
			<chessboard du="4" dv="4" textureref="t1" su="2" sv="2">
                   <c1 r="1.0" g="0.0" b="0.0" a="1.0" />
                   <c2 r="0.0" g="1.0" b="0.0" a="1.0" />
                   <cs r="0.0" g="0.0" b="1.0" a="1.0" />
			</chessboard>
		</primitive>
		
		<primitive id="chess2">
			<chessboard du="4" dv="4" textureref="t1" su="2" sv="2">
                   <c1 r="0.0" g="0.0" b="0.0" a="1.0" />
                   <c2 r="1.0" g="1.0" b="1.0" a="1.0" />
                   <cs r="1.0" g="0.0" b="0.0" a="1.0" />
			</chessboard>
		</primitive>

    </primitives>
       
    <components>
        
        <!-- Root Element -->
        <component id="root">        
            <transformation>
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="w1" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="chess1" />
                <componentref id="chess2" />
            </children>       
        </component>

        <component id="chess1">        
            <transformation>
                <translate x="1.0" y="1.0" z="1.0" />
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="w1" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chess1" />
            </children>       
        </component>      

        <component id="chess2">        
            <transformation>
                <rotate angle="45" axis="z" />
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="w1" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="chess2" />
            </children>       
        </component>

    </components>

</dsx>
