<dsx>

    <scene root="root" axis_length="2" />
        
    <views default="p1" >

        <perspective id="p1" near="0.4" far="500" angle="10">

            <from x="20" y="20" z="20" />
            <to x="0" y="0" z="0" />

        </perspective>

        <perspective id="p2" near="0.4" far="200" angle="40">

            <from x="10" y="10" z="10" />
            <to x="0" y="3" z="0" />

        </perspective>        

        <perspective id="d1" near="0.2" far="400" angle="30">

            <from x="-20" y="10" z="5" />
            <to x="0" y="3" z="0" />

        </perspective>

    </views>
    

    <illumination doublesided="0" local="1" >
    
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0.2" g="0.2" b="0.8" a="1.0" />
        
    </illumination>
    
    
    <lights>

        <omni id="l1" enabled="1" >
            <location x="-5" y="-5" z="-5" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.4" g="0.3" b="0.5" a="1.0" />
        </omni>

        <omni id="l3" enabled="1" >
            <location x="2" y="2" z="2" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </omni>
        
        <spot id="l2" enabled="1" angle="1.47" exponent="10">
            <target x="0" y="0" z="0" />
            <location x="-2" y="2" z="2" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.7" g="0.4" b="0.2" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </spot>

    </lights>
    
    
    <textures>

        <texture id="t1" file="resources/WoodTexture.png" length_s="1" length_t="1" />
        <texture id="g1" file="resources/FoliageTexture.jpg" length_s="1" length_t="1" />
        <texture id="t2" file="resources/RockTexture.jpg" length_s="1" length_t="1" />
        <texture id="g2" file="resources/FluorescentRedTexture.jpg" length_s="1" length_t="1" />
        
    </textures>

    
    <materials>

        <!-- Brown diffuse (wood) -->
        <material id="m1" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="1" />
        </material>

        <!-- Green diffuse/specular (fooliage) -->
        <material id="m2" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="3" />
        </material>

        <!-- Grey diffuse (rock) -->
        <material id="t1" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.05" a="1" />
            <diffuse r="0.89" g="0.55" b="0.09" a="1" />
            <specular r="0.18" g="0.13" b="0.05" a="1" />
            <shininess value="5" />
        </material>

        <!-- Fluorescent red -->
        <material id="e1" >
            <emission r="0.2" g="0" b="0" a="1" />
            <ambient r="1" g="0" b="0" a="1" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="1" g="0" b="0" a="1" />
            <shininess value="3" />
        </material>

    </materials>
    
    
    <transformations>
    
        <transformation id="t1">
           <translate x="5" y="1" z="0" />
           <rotate axis="x" angle="3.14" />
           <scale x="2" y="2" z="2" />
        </transformation>
        
    </transformations>
    
    <primitives>
    
        <primitive id="rect">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />       
        </primitive>

        <primitive id="sph">
            <sphere radius="1" slices="20" stacks="20" />        
        </primitive>

        <primitive id="cyl">
            <cylinder base="0.5" top="0" height="0.8" slices="10" stacks="10" />      
        </primitive>

        <primitive id="cyl2">
            <cylinder base="0.5" top="0.5" height="1" slices="10" stacks="10" />         
        </primitive>
                
        <primitive id="tor">
            <torus inner="0.05" outer="1.2" slices="20" loops="40" />         
        </primitive>
        
    </primitives>
       
    <components>
        
        <!-- Root Element -->
        <component id="root">        
            <transformation>
                <!--translate x="0" y="2" z="-1" /-->
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <componentref id="robot" />                
            </children>       
        </component>

        <component id="robot"> 
            <transformation>
                <!--translate x="0" y="2" z="-1" /-->
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <componentref id="torso"/>
                <componentref id="leftLeg"/>
                <componentref id="rightLeg"/>
            </children>
        </component>

        <component id="torso"> 
            <transformation>
                <translate x="0" y="2.5" z="0" />
                <scale x="1.5" y="2" z="1" />
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="leftLeg"> 
            <transformation>
                <translate x="-0.4" y="0.2" z="0" />
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <componentref id="leg"/>
            </children>
        </component>

        <component id="rightLeg"> 
            <transformation>
                <translate x="0.4" y="0.2" z="0" />
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <componentref id="leg"/>
            </children>
        </component>

        <component id="leg"> 
            <transformation>
                <scale x="0.4" y="1.3" z="0.4" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="m1" />
            </materials>
            <texture id="t1" />
            <children>
                <primitiveref id="cyl2" />
            </children>
        </component>

        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="frontSquare" />
                <componentref id="backSquare" />
                <componentref id="leftSquare" />
                <componentref id="rightSquare" />
                <componentref id="upSquare" />
                <componentref id="downSquare" /> 
            </children>      
        </component>

        <component id="frontSquare">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>      
        </component>

        <component id="backSquare">   
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>            
        </component>

                <component id="leftSquare">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>      
        </component>

        <component id="rightSquare">   
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>            
        </component>


        <component id="backSquare">   
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>            
        </component>

        <component id="upSquare">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>      
        </component>

        <component id="downSquare">   
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="rect" />
            </children>            
        </component>

    </components>

</dsx>