<dsx>

    <scene root="root" axis_length="2" />
        
    <views default="p1" >

        <perspective id="p1" near="0.4" far="500" angle="10">

            <from x="10" y="50" z="10" />
            <to x="0" y="0" z="0" />

        </perspective>

    </views>
    

    <illumination doublesided="0" local="1" >
    
        <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
        <background r="0" g="0" b="0" a="1.0" />
        
    </illumination>
    
    
    <lights>

        <omni id="l1" enabled="1" >
            <location x="15" y="15" z="15" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.4" g="0.3" b="0.5" a="1.0" />
        </omni>

    </lights>
        
    <textures>

    </textures>
    
    <materials>

        <!-- Brown diffuse -->
        <material id="w1" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.18" g="0.13" b="0.50" a="1" />
            <diffuse r="0.89" g="0.55" b="0.50" a="1" />
            <specular r="0.18" g="0.13" b="0.50" a="1" />
            <shininess value="1" />
        </material>

    </materials>
    
    <transformations>

    </transformations>
    
    <!-- novo bloco de animacao -->
    <animations>

        <animation id="l1" span="10" type="linear">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="1" yy="0" zz="1" />
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="-1" yy="0" zz="1" />
            <controlpoint xx="0" yy="0" zz="0" />
        </animation>

        <animation id="c1" span="5" type="circular" 
				centerx="0" centery="0" centerz="0"
                radius="0" startang="0" rotang="90" />

        <animation id="c2" span="5" type="circular" 
				centerx="0" centery="0" centerz="0"
                radius="0" startang="90" rotang="-180" />

        <animation id="c3" span="20" type="circular" 
				centerx="0" centery="0" centerz="0"
                radius="1" startang="0" rotang="360" />

        <animation id="c4" span="20" type="circular" 
				centerx="1" centery="1" centerz="1"
                radius="4" startang="270" rotang="-270" />

    </animations>

    <primitives>
    
        <primitive id="cyl">
            <cylinder base="0.5" top="0" height="1" slices="10" stacks="10" />      
        </primitive>

    </primitives>
       
    <components>
        
        <!-- Root Element -->
        <component id="root">        
            <transformation>
                <animationref id="l1"/>
            </transformation>
            <animation>
                <animationref id="l1"/>
            </animation>
            <materials>
                <material id="w1" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="cyl" />
            </children>       
        </component>

        <component id="cyl">        
            <transformation>
                <rotate angle="90" axis="y" />
            </transformation>
            <animation>
            </animation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="cyl" />
            </children>       
        </component>

    </components>

</dsx>
