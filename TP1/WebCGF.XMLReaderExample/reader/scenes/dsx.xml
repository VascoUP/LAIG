        </component>

        <!-- Upper rectangle -->
        <component id="t131">
        
            <transformation>

                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="-90"/>

            </transformation>

            <materials>

                <material id="inherit" />

            </materials>

            <texture id="inherit" />

            <children>

